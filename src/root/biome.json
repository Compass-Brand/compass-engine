{
  "files": {
    "ignoreUnknown": true,
    "includes": ["**", "!node_modules", "!dist", "!BMAD-METHOD", "!.beads"]
  },
  "formatter": {
    "enabled": true,
    "lineWidth": 100,
    "indentStyle": "space",
    "indentWidth": 2
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "jsxQuoteStyle": "double"
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "style": {
        "useNodejsImportProtocol": "off"
      }
    }
  }
}
