{
  "name": "@compass-brand/compass-engine",
  "version": "0.1.0",
  "description": "Central development tools for Compass Brand projects - BMAD, Claude Code config, workflow tools",
  "type": "module",
  "main": "tools/build.js",
  "bin": {
    "compass-engine": "./tools/cli.js"
  },
  "scripts": {
    "build": "node tools/build.js",
    "push": "node tools/push.js",
    "validate": "node tools/validate.js",
    "check:github-drift": "node tools/check-github-drift.js",
    "check": "npm run validate && npm run check:github-drift && npm run build && npm run push -- --dry-run --targets claude,codex,opencode,github",
    "create:bmad-module": "node tools/create-bmad-module.js",
    "clean": "node -e \"require('fs').rmSync('dist', { recursive: true, force: true })\"",
    "prepublishOnly": "npm run build"
  },
  "files": [
    "dist/**/*",
    "tools/*.js",
    "README.md"
  ],
  "keywords": [
    "bmad",
    "claude-code",
    "compass-brand",
    "development-tools",
    "ai-development"
  ],
  "author": "Compass Brand",
  "license": "AGPL-3.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/Compass-Brand/compass-engine.git"
  },
  "homepage": "https://github.com/Compass-Brand/compass-engine#readme",
  "engines": {
    "node": ">=18.0.0"
  }
}
